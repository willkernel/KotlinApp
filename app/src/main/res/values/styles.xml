<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="style_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ProgressDialogStyle"></style>

    <declare-styleable name="CircleImageView">
        <attr name="type">
            <enum name="none" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="rounded_rect" value="2"/>
        </attr>
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="rectRoundRadius" format="dimension"/>
    </declare-styleable>

    <!-- loadingView-->
    <declare-styleable name="LoadingView">
        <!--  设置外面进度条的半径 -->
        <attr name="outerCircleRadius" format="dimension|reference"/>
        <!--  设置外面进度条的颜色 -->
        <attr name="outerCircleColor" format="color|reference"/>
        <!--  设置三角形外接圆的半径 -->
        <attr name="innerTriangleRadius" format="dimension|reference"/>
        <!--  设置三角形颜色 -->
        <attr name="innerTriangleColor" format="color|reference"/>
        <!--  设置背景的颜色 -->
        <attr name="backgroundColor" format="color|reference"/>
        <!--  设置是否需要背景 -->
        <attr name="isNeedBackground" format="boolean"/>
        <attr name="strokeWidth" format="dimension|reference"/>
    </declare-styleable>
    <style name="MultipleStatusView"/>
    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
